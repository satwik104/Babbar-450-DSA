//APPROACH WITH TWO VARIABLES
string reverseWord(string str){
    int n=str.length();
    for(int i=0,j=n-1; i<=j; i++,j--)
    {
        swap(str[i],str[j]);
    }
    return str;
}
//APPROACH WITH SINGLE VARIABLE
